@page "/Error"
@using System.Diagnostics

<PageTitle>Error - VS2026 Dev Productivity</PageTitle>

<div class="error-container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="text-center mb-5">
                <div class="error-icon mb-4">
                    <i class="bi bi-exclamation-triangle text-danger"></i>
                </div>
                <h1 class="display-6 fw-bold text-danger mb-3">Oops! Something went wrong</h1>
                <p class="lead text-muted">
                    An unexpected error occurred while processing your request. We apologize for the inconvenience.
                </p>
            </div>

            <div class="error-card">
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-bug me-2"></i>
                            Error Details
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (ShowRequestId)
                        {
                            <div class="mb-3">
                                <strong>Request ID:</strong> 
                                <code class="ms-2 p-2 bg-light rounded">@RequestId</code>
                                <button class="btn btn-sm btn-outline-secondary ms-2" @onclick="CopyRequestId" title="Copy Request ID">
                                    <i class="bi bi-clipboard"></i>
                                </button>
                            </div>
                        }
                        
                        <div class="mb-3">
                            <strong>Timestamp:</strong> 
                            <span class="ms-2">@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</span>
                        </div>
                        
                        <div class="mb-3">
                            <strong>What you can do:</strong>
                            <ul class="mt-2">
                                <li>Try refreshing the page</li>
                                <li>Go back to the previous page</li>
                                <li>Return to the home page</li>
                                <li>If the problem persists, contact support with the Request ID above</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="error-actions text-center mt-4">
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <button class="btn btn-primary" @onclick="RefreshPage">
                        <i class="bi bi-arrow-clockwise me-2"></i>
                        Refresh Page
                    </button>
                    <a href="/" class="btn btn-outline-primary">
                        <i class="bi bi-house me-2"></i>
                        Go Home
                    </a>
                    <button class="btn btn-outline-secondary" @onclick="GoBack">
                        <i class="bi bi-arrow-left me-2"></i>
                        Go Back
                    </button>
                </div>
            </div>

            @* Development Environment Information *@
            <div class="development-info mt-5">
                <div class="card border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h6 class="card-title mb-0">
                            <i class="bi bi-tools me-2"></i>
                            Development Information
                        </h6>
                    </div>
                    <div class="card-body">
                        <p class="small mb-2">
                            <strong>Environment:</strong> This application is running in 
                            <span class="badge bg-info">Development</span> mode.
                        </p>
                        <p class="small mb-2">
                            For production deployments, ensure the <code>ASPNETCORE_ENVIRONMENT</code> 
                            environment variable is set to <code>Production</code>.
                        </p>
                        <p class="small mb-0 text-muted">
                            <i class="bi bi-shield-exclamation me-1"></i>
                            Development mode may display sensitive information and should not be enabled in production.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code{
    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    private string? RequestId { get; set; }
    private bool ShowRequestId => !string.IsNullOrEmpty(RequestId);

    protected override void OnInitialized() =>
        RequestId = Activity.Current?.Id ?? HttpContext?.TraceIdentifier;

    private async Task CopyRequestId()
    {
        if (!string.IsNullOrEmpty(RequestId))
        {
            await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", RequestId);
            // You could add a toast notification here
        }
    }

    private void RefreshPage()
    {
        Navigation.Refresh();
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/", replace: true);
    }

    [Inject]
    private IJSRuntime JSRuntime { get; set; } = default!;

    [Inject]
    private NavigationManager Navigation { get; set; } = default!;
}
