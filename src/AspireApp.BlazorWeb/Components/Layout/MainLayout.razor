@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <i class="bi bi-house-door text-primary me-2"></i>
                <span class="text-muted">VS2026 Dev Productivity Platform</span>
            </div>
            <div class="d-flex align-items-center">
                <span class="badge bg-success me-2">
                    <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>
                    Online
                </span>
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-book me-1"></i>
                    Documentation
                </a>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div>
            An unhandled error has occurred.
            <a href="." class="btn btn-sm btn-outline-light ms-2 reload">
                <i class="bi bi-arrow-clockwise me-1"></i>
                Reload
            </a>
            <button class="btn btn-sm btn-outline-light ms-1 dismiss" aria-label="Dismiss">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
    </div>
</div>

<style>
    .top-row {
        border-bottom: 1px solid #e9ecef;
        background-color: #f8f9fa;
        height: 3.5rem;
    }
    
    #blazor-error-ui {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1050;
        padding: 1rem;
        background: rgba(220, 53, 69, 0.95);
        backdrop-filter: blur(4px);
        display: none;
    }
    
    #blazor-error-ui .alert {
        margin: 0;
        border: none;
    }
</style>
